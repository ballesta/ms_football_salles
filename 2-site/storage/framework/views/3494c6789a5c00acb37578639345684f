   <script type="text/javascript">
	$(document).ready(function() { 
		
		
		$("#salle_id").jCombo("<?php echo url('partie/comboselect?filter=fb_clubs:club_id:club_id'); ?>",
		{  selected_value : '<?php echo e($row["salle_id"]); ?>' });
		
		$("#equipe_id").jCombo("<?php echo url('partie/comboselect?filter=fb_equipes:equipe_id:nom'); ?>",
		{  selected_value : '<?php echo e($row["equipe_id"]); ?>' });
		
		$("#malette_capteurs_id").jCombo("<?php echo url('partie/comboselect?filter=fb_malette_capteurs:malette_capteurs_id:identifiant'); ?>",
		{  selected_value : '<?php echo e($row["malette_capteurs_id"]); ?>' });
		 

		$('.removeMultiFiles').on('click',function(){
			var removeUrl = '<?php echo e(url("partie/removefiles?file=")); ?>'+$(this).attr('url');
			$(this).parent().remove();
			$.get(removeUrl,function(response){});
			$(this).parent('div').empty();	
			return false;
		});		
		
	});
	</script>		 
