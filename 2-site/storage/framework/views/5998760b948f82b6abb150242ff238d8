    <script type="text/javascript">
        $(document).ready(function () {


            $("#complexe_salle_id").jCombo("<?php echo url('joueur/comboselect?filter=fbs_complexe_salles:complexe_salle_id:nom|ville'); ?>",
                    {selected_value: '<?php echo e($row["complexe_salle_id"]); ?>'});

            $("#equipe_id").jCombo("<?php echo url('joueur/comboselect?filter=fb_equipes:equipe_id:nom'); ?>",
                    {selected_value: '<?php echo e($row["equipe_id"]); ?>'});


            $('.removeMultiFiles').on('click', function () {
                var removeUrl = '<?php echo e(url("joueur/removefiles?file=")); ?>' + $(this).attr('url');
                $(this).parent().remove();
                $.get(removeUrl, function (response) {
                });
                $(this).parent('div').empty();
                return false;
            });

        });
    </script>
